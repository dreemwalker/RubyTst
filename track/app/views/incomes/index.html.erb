<p id="notice"><%= notice %></p>

<h1>Incomes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Sum</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.catname %></td>
        <td><%= income.sum %></td>
        <td><%= income.date %></td>
        <td><%= link_to 'Edit', edit_income_path(income) %></td>
        <td><%= link_to 'Delete', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

